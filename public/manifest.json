{
  "short_name": "AW",
  "name": "AkashicLink Staging",
  "description": "Your interface with the Akashic ecosystem",
  "version": "0.0.33",
  "releaseDate": "2024-01-30",
  "icons": {
    "16": "shared-assets/icons/APicon.png",
    "48": "shared-assets/icons/APicon.png",
    "128": "shared-assets/icons/APicon.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": "shared-assets/icons/APicon.png",
    "default_title": "AkashicLink Staging",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "storage", "scripting", "tabs", "alarms"],
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "ids": ["*"],
    "matches": [
      "https://*.google.com/*",
      "https://*.akashicpay.com/*",
      "https://*.staging-akashicpay.com/*",
      "http://localhost:3000/*"
    ]
  }
}
